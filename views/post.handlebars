<!-- nav bar -->
<div class="row nav-wrapper">
  <a href='#' class='brand-logo right'><img class='logo circle responsive-img valign' src='/images/QuackerLogo.png'
      alt='Quacker Logo' /></a>
</div>

<!-- display post -->

<div class="row flexbox" id="">
  <div class="col s12 ">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <p class="card-title">{{post.user.username}}</p>
        <div class="postCardMessage">
          <p>{{post.message}}</p>
        </div>
      </div>
      <div class="card-action">
        <a class="waves-effect waves-blue btn-flat" id="likeBtn">
          {{post.likes}} &nbsp
          <i class="fa-solid fa-egg"></i> Likes</a>
        <a class="waves-effect waves-blue btn-flat" id="replyBtn">Reply</a>
      </div>
    </div>
  </div>
</div>


<div class="row flexbox">
  <div class="col s12 ">
    <div class="card blue-grey darken-2">
      <div class="card-content white-text">
        {{#each post.comments}}
        <p class="orangeText">{{user.username}}:</p>
        <p>{{message}}</p>
        {{/each}}
        <div class="card-action">
          <a class="waves-effect waves-blue btn-flat" id="likeBtn">
            {{post.likes}} &nbsp
            <i class="fa-solid fa-egg"></i> Likes</a>
          <a class="waves-effect waves-blue btn-flat" id="replyBtn">Reply</a>
        </div>
      </div>
    </div>
  </div>