<!-- nav bar -->
<div class="row center-align">
  <a href='/pond' class='brand-logo'><img class='logo circle responsive-img valign' src='/images/QuackerLogo.png'
      alt='Quacker Logo' /></a>
</div>

<!-- display post -->

<div class="row flexbox" id="">
  <div class="col s12 ">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <p class="card-title">{{post.user.username}}</p>
        <div class="postCardMessage" id="pDelete">
          <p>{{post.message}}</p>
          <textarea class="" id="showEdit" display="none"></textarea>
        </div>
      </div>
      <div class="card-action">
        <a class="waves-effect waves-blue btn-flat" id="likeBtn" display="block">
          {{post.likes}} &nbsp
          <i class="fa-solid fa-egg" id="likesIcon" display="block"></i> Likes</a>
          <a class="waves-effect waves-blue btn-flat" id="editBtn" display="block">Edit</a>
        <a class="waves-effect waves-blue btn-flat" id="replyBtn" display="block">Reply</a>
        <a class="waves-effect waves-blue btn-flat" id="cancelBtn" display="none">Cancel</a>
        <a class="waves-effect waves-blue btn-flat" id="saveBtn" display="none">Save</a>
        <button id="deleteBtn" class=" btn waves-effect  red darken-3 waves-orange lighten-1 right" type="submit"
          name="action" display="block">Delete <i class="material-icons">delete_forever</i>
        </button>
      </div>
    </div>
  </div>
</div>


<div class="row flexbox">
  <div class="col s12 ">
    <div class="card blue-grey darken-2">
      <div class="card-content white-text">
        {{#each post.comments}}
        <p class="orangeText">{{user.username}}:</p>
        <p>{{message}}</p>
        {{/each}}
        <div class="card-action">
          <a class="waves-effect waves-blue btn-flat" id="likeBtn">
            {{post.likes}} &nbsp
            <i class="fa-solid fa-egg"></i> Likes</a>
          <a class="waves-effect waves-blue btn-flat" id="replyBtn">Reply</a>
        </div>
      </div>
    </div>
  </div>

  <script src="/js/post.js"></script>