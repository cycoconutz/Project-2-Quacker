<!-- nav bar -->
<div class='row center-align'>
  <a href='/pond' class='brand-logo'><img
      class='logo circle responsive-img valign'
      src='/images/QuackerLogo.png'
      alt='Quacker Logo'
    /></a>
</div>

<!-- display post -->

<div class='row flexbox' id=''>
  <div class='col s12'>
    <div class='card blue-grey darken-1'>
      <div class='card-content white-text'>
        <p class='card-title'>{{post.user.username}}</p>
        <div class='postCardMessage' id='post-message'>
          <p>{{post.message}}</p>
          <textarea id='editedPost' data-view='hidden'></textarea>
        </div>
      </div>
      <div class='card-action'>
        <a class='waves-effect waves-blue btn-flat' id='likeBtn'>
          {{post.likes}}
          &nbsp
          <i class='fa-solid fa-egg'></i>
          Likes</a>
        <a class='waves-effect waves-blue btn-flat' id='replyBtn'>Reply</a>
        <button
          id='deleteBtn'
          class='btn waves-effect red darken-3 waves-orange lighten-1 right'
          type='submit'
          name='action'
        >Delete
          <i class='material-icons'>delete_forever</i>
        </button>
        <button
          id='editBtn'
          data-view='visible'
          class='btn waves-effect btn-flat waves-orange lighten-1 m 2right'
          type='submit'
          name='action'
        >edit
          <i class='material-icons'>edit</i>
        </button>
        <button
          id='saveBtn'
          data-view='hidden'
          class='btn waves-effect btn-flat waves-orange lighten-1 m 2right'
          type='button'
          name='action'
        >Save
          <i class='material-icons'>save</i>
        </button>
        <button
          id='cancelBtn'
          class='btn waves-effect btn-flat waves-orange lighten-1 m 2right'
          data-view='hidden'
          type='submit'
          name='action'
        >Cancel
          <i class='material-icons'>cancel</i>
        </button>

      </div>
    </div>
  </div>
</div>

<div class='row flexbox'>
  <div class='col s12'>
    <div class='card blue-grey darken-2'>
      <div class='card-content white-text'>
        {{#each post.comments}}
          <p class='orangeText'>{{user.username}}:</p>
          <p>{{message}}</p>
        {{/each}}
        <div class='card-action'>
          <a class='waves-effect waves-blue btn-flat' id='likeBtn'>
            {{post.likes}}
            &nbsp
            <i class='fa-solid fa-egg'></i>
            Likes</a>
          <a class='waves-effect waves-blue btn-flat' id='replyBtn'>Reply</a>
        </div>
      </div>
    </div>
  </div>
</div>
<script src='/js/post.js'></script>