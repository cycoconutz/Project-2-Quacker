<!-- nav bar -->
<nav>
  <div class='nav-wrapper'>
    <a href='#' class='brand-logo right'><img class='logo circle responsive-img valign' src='/images/QuackerLogo.png'
        alt='Quacker Logo' /></a>
    <ul id='nav-mobile' class='left hide-on-med-and-down'>
      <li><a href='/pond'>Home</a></li>
      <li><a href='/'>LogIn</a></li>
      <li><a href='#'>Log Out</a></li>
    </ul>
  </div>
</nav>
<main>
  <div class='row'>
    <form id="new-post-form" class="col s12">

      <!-- left sidebar -->
      <div class="row p">
        <div class="row">
          <div class="input-field col s12 m4 l3">
            <label for="textarea1">New Post</label>
            <textarea id="textarea1" name="post-message" class="materialize-textarea"></textarea>
          </div>
        </div>
      </div>
      <div class='col s12 m4 l3'>
        <button class="btn waves-effect waves-light" type="submit" name="action">Post
          <i class="material-icons left">comment</i>
        </button>


      </div>
    </form>
  </div>

  <!-- end left -->

  <!-- main -->
  {{#each posts as |post|}}

  <div class="row">
    <div class="col s12 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">{{post.User.username}}{{post.User.profileImage_id}} </span>
          <p>{{post.message}}</p>
        </div>
        <div class="card-action">
          <a class="waves-effect waves-blue btn-flat" id="likeBtn"><i class="fa-solid fa-egg"></i> Like</a>
          <a class="waves-effect waves-blue btn-flat" id="replyBtn">Reply</a>
        </div>

      </div>
    </div>
  </div>
  {{/each}}
</main>

<script src="/js/post.js"></script>