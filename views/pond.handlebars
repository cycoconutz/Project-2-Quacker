<!-- nav bar -->
<div class='row'>
  <a href='/' class='brand-logo right'><img class='logo circle responsive-img valign' src='/images/QuackerLogo.png'
      alt='Quacker Logo' /></a>
</div>
<main>
  <!-- left sidebar -->
  <div class="row flexbox">
    <form class="col s12">
      <div class="input-field">
        <textarea id="textarea1" data-length="120" class="materialize-textarea"></textarea>
        <label for="textarea1">New Post</label>
      </div>

      <div class='flexbox'>
        <a class='waves-effect waves-light btn-large' id='post-btn'><i class='material-icons left'>comment</i>Post</a>
      </div>
    </form>
  </div>


  <!-- end left -->
  <!-- main -->
  {{#each posts as |post|}}
  <a href="http://localhost:3001/post/{{id}}">
    <div class="row flexbox">
      <div class="col s12 ">
        <div class="card blue-grey darken-1">
          <div class="card-content white-text">
            <span class="card-id#{{post.id}}">#{{post.id}}</span>
            <span class="card-title">{{user.username}}</span>
            <p>{{post.message}}</p>
          </div>
          <div class="card-action">
            <a class="waves-effect waves-blue btn-flat likeBtn">
              {{post.likes}} &nbsp
              <i class="fa-solid fa-egg"></i>Likes
            </a>
            <a class="waves-effect waves-blue btn-flat" id="replyBtn">Reply</a>
          </div>
        </div>
      </div>
    </div>
  </a>
  {{/each}}
  <div class="row flexbox">
    <button id="logout-link" class=" logoutBtn  btn waves-effect waves-teal" type="submit" name="action">Logout
    </button>
  </div>
</main>

<script src="/js/likes.js"></script>
<script src="/js/post.js"></script>