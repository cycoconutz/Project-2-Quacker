<!-- nav bar -->
<div class="row center-align">
  <a href='/pond' class='brand-logo' id="quack2" onclick="play2()"><img class='logo circle responsive-img valign'
      src='/images/QuackerLogo.png' alt='Quacker Logo' /></a>
</div>

<!-- display post -->

<div class="row flexbox" id="">
  <div class="col s12 ">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <p class="card-title">{{post.user.username}}</p>
        <div class="postCardMessage">
          <p>{{post.message}}</p>
        </div>
      </div>
      <div class="card-action">
        <a class="waves-effect waves-blue btn-flat" id="likeBtn">
          {{post.likes}} &nbsp
          <i class="fa-solid fa-egg"></i> Likes</a>
        <a class="waves-effect waves-blue btn-flat" id="replyBtn">Reply</a>
        <button id="deleteBtn" class=" btn waves-effect  red darken-3 waves-orange lighten-1 right" type="submit"
          name="action">Delete <i class="material-icons" id="quack2" onclick="play2()">delete_forever</i>
        </button>
      </div>
    </div>
  </div>
</div>
{{#each comments as |comment|}}
<div class="row flexbox">
  <div class="col s12 ">
    <div class="card blue-grey darken-2">
      <div class="card-content white-text">
        <p class="orangeText">{{comment.User.username}}:</p>
        <p>{{comment.message}}</p>
        <div class="card-action">
          <a class="waves-effect waves-blue btn-flat" id="likeBtn">
            {{comment.Post.likes}} &nbsp
            <i class="fa-solid fa-egg"></i> Likes</a>
          <a class="waves-effect waves-blue btn-flat" id="replyBtn">Reply</a>
        </div>
      </div>
    </div>
  </div>
</div>
{{/each}}
<div class="row flexbox">
  <button id="logout-link" class=" logoutBtn  btn waves-effect waves-teal" type="submit" name="action">Logout
  </button>
</div>
<script src="/js/post.js"></script>
<script src="/js/likes.js"></script>
<script src="/js/logout.js"></script>