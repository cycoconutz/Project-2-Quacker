<main>
  <div class='row'>
    <!-- left sidebar -->

    <div class='row p'>
      <form class='col s12'>
        <div class='row'>
          <div class='input-field col s12 m4 l3'>
            <textarea id='textarea1' class='materialize-textarea'></textarea>
            <label for='textarea1'>New Post</label>
          </div>
        </div>
      </form>
    </div>
    <div class='col s12 m4 l3'>
      <a class='waves-effect waves-light btn-large' id='post-btn'><i
          class='material-icons left'
        >comment</i>Post</a>
    </div>
    <!-- end left -->

    <!-- main -->
    <div class='row'>
      <div class='col s12 m6'>
        <div class='card blue-grey darken-1'>
          <div class='card-content white-text'>
            <span class='card-title'>{{userdata.username}}</span>
            <p>{{post}}</p>
          </div>
          <div class='card-action'>
            <a class='waves-effect waves-blue btn-flat' id='likeBtn'><i
                class='fa-solid fa-egg'
              ></i>
              Like</a>
            <a class='waves-effect waves-blue btn-flat' id='replyBtn'>Reply</a>
            <div class='card blue-grey darken-1'>
              <div class='card-content white-text'>
                <span class='card-title'>{{userdata.username}}</span>
                <p>{{post}}</p>
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</main>